@{
    ViewData["Title"] = "Giriş";
    var returnUrl = ViewBag.ReturnUrl as string;
}
<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
  <div class="card shadow" style="max-width: 420px; width: 100%; border-radius: 16px;">
    <div class="card-body p-4">
      <div class="text-center mb-3">
        <h3 class="mb-1">Telefon Rehberi</h3>
        <small class="text-muted">Hesabınıza giriş yapın</small>
      </div>

      <form method="post" action="/auth/login">
        <input type="hidden" name="returnUrl" value="@returnUrl" />
        <div class="mb-3">
          <label class="form-label">E-posta</label>
          <input type="email" name="email" class="form-control" placeholder="ornek@firma.com" required />
        </div>
        <div class="mb-2">
          <label class="form-label">Şifre</label>
          <input type="password" name="password" class="form-control" placeholder="••••••••" required />
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
          <div class="alert alert-danger py-2">E-posta veya şifre hatalı.</div>
        }

        <button class="btn btn-primary w-100 mt-2" type="submit">Giriş Yap</button>
      </form>

      <div class="text-center mt-3">
        <a class="small text-decoration-none" href="#">Şifremi unuttum</a>
      </div>
    </div>
  </div>
</div>
