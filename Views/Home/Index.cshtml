@model X.PagedList.IPagedList<TelefonRehberi.Models.Kisi>
@using X.PagedList.Mvc.Core
@using X.PagedList

@{
    ViewData["Title"] = "Kişi Listesi";
}

<div class="container mt-4">

    <h2>Kayıtlı Kişiler</h2>

    <!-- 🔍 Arama Formu -->
    <form asp-controller="Home" asp-action="Index" method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-3">
            <input type="text" name="adSoyadAra" value="@Context.Request.Query["adSoyadAra"]" class="form-control" placeholder="Ad veya Soyad ara..." />
        </div>
        <div class="col-md-3">
            <input type="text" name="emailAra" value="@Context.Request.Query["emailAra"]" class="form-control" placeholder="Email ara..." />
        </div>
        <div class="col-md-3">
            <select name="departmanAra" class="form-control">
                <option value="">Departman Seç</option>
                @foreach (var d in ViewBag.Departmanlar as List<string>)
                {
                    var selectedAttr = Context.Request.Query["departmanAra"] == d ? "selected=\"selected\"" : "";
                    @Html.Raw($"<option value=\"{d}\" {selectedAttr}>{d}</option>")
                }
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-outline-primary w-100">Ara</button>
        </div>
    </div>
</form>


    <a asp-controller="Kisiler" asp-action="Create" class="btn btn-success mb-3">➕ Yeni Kişi Ekle</a>
<a class="btn btn-outline-success mb-3" href="/Kisiler/ExportToExcel">
    📥 Excel'e Aktar
</a>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">📭 Henüz kayıtlı kişi bulunmamaktadır.</div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>Departman</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kisi in Model)
                {
                    <tr>
                        <td>@kisi.Ad</td>
                        <td>@kisi.Soyad</td>
                        <td>@kisi.Telefon</td>
                        <td>@kisi.Email</td>
                        <td>@kisi.Departman</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-center mt-4">
            @Html.PagedListPager(Model, sayfa =>
                Url.Action("Index", "Home", new
                {
                    sayfa,
                    adSoyadAra = Context.Request.Query["adSoyadAra"],
                    emailAra = Context.Request.Query["emailAra"],
                    departmanAra = Context.Request.Query["departmanAra"]
                }))
        </div>
    }

</div>
<script>
    document.getElementById("departmanSelect").addEventListener("change", function () {
        this.form.submit();
    });
</script>