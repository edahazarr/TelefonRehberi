@model List<TelefonRehberi.Models.Kisi>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">📋 Kişi Listesi</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Hiç kişi kaydı bulunamadı.</div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>Departman</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kisi in Model)
                {
                    <tr>
                        <td>@kisi.Ad</td>
                        <td>@kisi.Soyad</td>
                        <td>@kisi.Telefon</td>
                        <td>@kisi.Email</td>
                        <td>@kisi.Departman</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
