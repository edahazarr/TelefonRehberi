@model TelefonRehberi.Models.Kisi

<h2>Yeni Kişi Ekle</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Ad:</label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" style="color:red"></span>
    </div>

    <div>
        <label>Soyad:</label>
        <input asp-for="Soyad" class="form-control" />
        <span asp-validation-for="Soyad" style="color:red"></span>
    </div>

    <div>
        <label>Telefon:</label>
        <input asp-for="Telefon" class="form-control" />
        <span asp-validation-for="Telefon" style="color:red"></span>
    </div>

    <div>
        <label>Email:</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" style="color:red"></span>
    </div>

    <div class="form-group">
        <label asp-for="Departman" class="control-label"></label>
        <select asp-for="Departman" class="form-control" asp-items="ViewBag.Departmanlar">
            <option value="">Departman seçiniz</option>
        </select>
        <span asp-validation-for="Departman" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">İptal</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
